algoritmo "notas"

var
nome: caractere
nota1, nota2, media: real

inicio

escreval("Informe o nome do aluno: ")
leia(nome)
escreval("Informe a nota P1: ")
leia(nota1)

escreval("Informe a nota P2: ")
leia(nota2)

media <- (nota + nota2) /2

se (media >= 7) entao
escreval ("A média do aluno ", nome, "é:", media)
fimse

se (media <= 7) entao
escreval

fimalgoritmo
